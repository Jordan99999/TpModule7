{% extends "bootstrap.html.twig" %}
{% block body %}
	<div class="container">
		<h1 class="text-center mt-4">Liste des users</h1>

		<a href="{{ path("security.registration") }}" class="btn btn-warning my-3">
			Ajouter un nouvel user</a>

		<table class="table table-striped align-middle">
			<thead>
				<tr>
					<th>id</th>
					<th>email</th>
					<th>password</th>
					<th>pseudo</th>
					<th>date_creation</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for key, value in admins %}
					<tr>
						<td>{{ value.id }}</td>
						<td>{{ value.email }}</td>
						<td>{{ value.password }}</td>
						<td>{{value.pseudo}}</td>
						<td>{{ value.dateCreation|date('d/m/Y') }}</td>
						<td>
							<a href="{{path("update_admin" , { id : value.id}) }}" class="btn btn-secondary">modifier</a>
						</td>
						<td>
							<a href="{{path("delete_admin" , { id : value.id}) }}" class="btn btn-danger">supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

